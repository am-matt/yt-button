{
    "manifest_version": 2,
    "name": "yt-button",
    "version": "0.0.1",
  
    "description": "An extension that adds a button to YouTube",
    "homepage_url": "https://mattcoding.com",
    "icons": {
      "48": "icons/smallcat.jpg"
    },
  
    "permissions": ["<all_urls>","activeTab","tabs","scripting","webNavigation"],
  
    "browser_action": {
      "default_icon": "icons/smallcat.jpg",
      "default_title": "this button does nothing."
    },

    "background": {
      "scripts": ["content_scripts/main.js"]
    }
  }